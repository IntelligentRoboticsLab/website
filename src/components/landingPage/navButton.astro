---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { title, body, href } = Astro.props;
---

<a
  class="px-6 py-4 rounded-md bg-dnt-orange-500 dark:bg-dnt-orange-400 text-dnt-orange-50 dark:text-dnt-orange-900 hover:decoration-dotted"
  href={href}
>
	<h1 class="font-bold text-2xl">{title}</h1>
  <h2 class="p-0">{body}</h2>
</a>
