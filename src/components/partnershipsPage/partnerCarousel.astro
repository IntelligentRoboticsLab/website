---
import PartnerContainer from "./partners/partnerContainer.astro";
import { PartnerLevels } from "./partners/types";
import {
  PartnerListLevel1,
  PartnerListLevel2,
  PartnerListLevel3,
  PartnerListLevel4,
} from "../../utils/partners";
---

<div class="lg:items-begin mt-16 w-full items-center justify-center p-10">
  <h1 class="mb-2 text-center text-5xl font-bold text-partner-text">
    Our partners
  </h1>
  <div
    class="lg:items-begin my-16 w-full items-center justify-center space-y-12"
  >
    <div>
      <PartnerContainer
        partners={PartnerListLevel1}
        level={PartnerLevels.Platinum}
      />
    </div>
    <div>
      <PartnerContainer
        partners={PartnerListLevel2}
        level={PartnerLevels.Gold}
      />
    </div>
    <div>
      <PartnerContainer
        partners={PartnerListLevel3}
        level={PartnerLevels.Silver}
      />
    </div>
    <div>
      <PartnerContainer
        partners={PartnerListLevel4}
        level={PartnerLevels.Bronze}
      />
    </div>
  </div>
  <!-- <img src="/images/Team_Complete.webp" width="800px" alt="DNT team image" /> -->
</div>
