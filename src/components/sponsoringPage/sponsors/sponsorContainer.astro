---
import SponsorCard from "./sponsorCard.astro";
import type { Sponsor } from "./types";
import { SponsorLevels } from "./types";

export interface Props {
  sponsors: Sponsor[];
  level: Number;
}

const { sponsors, level } = Astro.props as Props;

let levelstyleInner = "max-w-lg w-4/7";
let levelstyleOuter = " flex-wrap justify-between ";
if (level == SponsorLevels.Platinum) {
  levelstyleInner = "w-full m-5 max-w-7xl";
  levelstyleOuter = " flex-col justify-center items-center";
} else if (level == SponsorLevels.Gold) {
  levelstyleInner = "w-full m-5 max-w-5xl";
  levelstyleOuter = " flex-col justify-center items-center";
} else if (level == SponsorLevels.Silver || level == SponsorLevels.Bronze) {
  levelstyleInner = "max-w-md w-3/7 m-3";
  levelstyleOuter = " justify-center flex-wrap";
}
---

<div class=`w-full cursor-grab overflow-hidden rounded-lg`>
  <div class=`flex w-full content-center ${levelstyleOuter}`>
    <p class=`${sponsors.length == 0 ? " " : "hidden"}`>No one in this catogory is sponsoring us yet. Do you want to be the first? Mail at: <a
      href="mailto:info@dutchnaoteam.nl"
      class="text-black underline hover:text-dnt-orange-400 hover:decoration-wavy dark:text-white"
      >info@dutchnaoteam.nl</a
    ></p>
    {
      sponsors.map((sponsor) => (
        <div class={levelstyleInner}>
          <SponsorCard {...sponsor} />
        </div>
      ))
    }
  </div>
</div>