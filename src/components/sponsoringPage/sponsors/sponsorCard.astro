---
import type { Sponsor } from "./types";
import { Image } from "@astrojs/image/components";

const {
    name,
    description,
    url,
    logo,
    level,
} = Astro.props as Sponsor;

let level1style = "bg-dnt-orange-200 hover:no-underline";
let level2style = "bg-white/10 hover:bg-white/20 hover:no-underline";
---

<article
  class=`flex flex-wrap items-start rounded-lg border border-dnt-orange-200/20 bg-cover px-4 pb-1 pt-4 transition-colors hover:border-dnt-orange-300/50 ${level == 1 ? level1style : level2style}`
>
  <Image
    src={logo}
    width={100}
    height={100}
    class="mr-3 h-30 w-30 bg-white"
    alt={`@${name}'s logo`}
  />
  <div class="flex flex-1 flex-wrap justify-start">
    <h3 class="mr-2 font-bold hover:underline">
      <a
        href={`${url}`}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm hover:text-[#1da1f2] sm:text-base"
      >
        {name}
      </a>
    </h3>
    <p class="my-1 whitespace-pre-line text-sm xl:text-base truncate h-48">{description}</p>
  </div>
</article>
